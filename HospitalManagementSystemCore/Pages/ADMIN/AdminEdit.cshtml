@page
@model HospitalManagementSystem.Pages.Admin.AdminEditModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-sm-flex ml-5 mb-2 mt-3">
        <h1 class="h3 mb-0 " style="font-family: 'Poppins';color: #4E4E4E;">Welcome, </h1>
        <h1 class="h3 mb-0 " style="font-family: 'Poppins';color:#1390D6;">@Model.mname</h1>
    </div>
    <section>
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="border-radius: 1rem 1rem 1rem 1rem;">
                    <h2 class="h3 m-4 grey-text" style="font-family: 'Poppins';">Edit @Model.profession with ID = @Model.ID </h2>
                    <div class="card-body">
                        <form method="post">
                            @for (int i = 0; i < Model.professions[Model.profession].Item2.Count; i++)
                            {
                                <input type="text" name="@Model.professions[Model.profession].Item2[i]" id="@Model.professions[Model.profession].Item2[i]" value="@Model.Datatable.Rows[0][i]" placeholder="@Model.professions[Model.profession].Item1[i]" required>
                            }
                            <input class="btn btn-primary" type="submit" value="Submit">
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
