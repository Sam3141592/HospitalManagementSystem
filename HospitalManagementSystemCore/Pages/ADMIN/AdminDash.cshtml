@page
@model HospitalManagementSystem.Pages.ADMIN.AdminDashModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-sm-flex ml-5 mb-2 mt-3">
        <h1 class="h3 mb-0 " style="font-family: 'Poppins';color: #4E4E4E;">Welcome, </h1>
        <h1 class="h3 mb-0 " style="font-family: 'Poppins';color:#1390D6;">@Model.mname</h1>
    </div>
    <section>
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="border-radius: 1rem 1rem 1rem 1rem;">
                    <h2 class="h3 m-4 grey-text" style="font-family: 'Poppins';">Current Users</h2>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department Number</th>
                                    <th>Speciality</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Cardiology</td>
                                    <td>1</td>
                                    <td>Heart</td>
                                    <td><button onclick="deleteRow(this)">Delete</button></td>
                                </tr>
                                <tr>
                                    <td>Dentistry</td>
                                    <td>2</td>
                                    <td>Teeth</td>
                                    <td><button onclick="deleteRow(this)">Delete</button></td>
                                </tr>
                                <tr>
                                    <td>Neurology</td>
                                    <td>3</td>
                                    <td>Brain</td>
                                    <td><button onclick="deleteRow(this)">Delete</button></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="float-xl-end"><a href="/ADMIN/AdminView">See more</a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="border-radius: 1rem 1rem 1rem 1rem;">
                    <div class="card-title">
                        <h2 class="h3 m-4 grey-text" style="font-family: 'Poppins';">Announcements</h2>

                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div class="card">
                                @for (int i = 0; i < Math.Min(Model.annc.Rows.Count, 2); i++)
                                {
                                    <div class="card">
                                        <div class="card-title">
                                            @Model.annc.Rows[i][0]
                                        </div>
                                        <div class="card-body">
                                            <div class="ct-bar-chart m-t-30">
                                                <p>@Model.annc.Rows[i][2]</p>
                                            </div>
                                        </div>
                                        <div class="float-xl-end">@Model.annc.Rows[i][1]</div>
                                    </div>
                                }


                                <div class="float-xl-end"><a href="/Admin/AdminAnnouncements">See more</a></div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
</div>
