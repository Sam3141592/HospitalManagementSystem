@page
@model HospitalManagementSystem.Pages.Labtech.LabtechAnnouncmentsModel
@{
    Layout = "_LayoutLabtech";
}
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.ltname. <span>Welcome Here</span></h3>
            </div>
            <section>
                <div class="row">

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h4>Announcments</h4>

                            </div>
                            <div class="card-body">
                                <div class="card">
                                    @for (int i = 0; i < Math.Min(Model.annc.Rows.Count, 3); i++)
                                    {
                                        <div class="card">
                                            <div class="card-title">
                                                @Model.annc.Rows[i][0]
                                            </div>
                                            <div class="card-body">
                                                <div class="ct-bar-chart m-t-30">
                                                    <p>@Model.annc.Rows[i][2]</p>
                                                </div>
                                            </div>
                                            <div class="float-xl-end">@Model.annc.Rows[i][1]</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>