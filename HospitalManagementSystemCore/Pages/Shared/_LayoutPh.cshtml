<!DOCTYPE html>
<html>
<head>
    <style>
        .sidebar {
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #7AA7C1;
            position: fixed;
            height: 100%;
            overflow: auto;
        }

        .sidebar a {
          display: block;
          color: black;
          padding: 16px;
          text-decoration: none;
        }

        .sidebar a.active {
          background-color: #3d5360;
          color: white;
        }

        .sidebar a:hover:not(.active) {
          background-color: #555;
          color: white;
        }

        div.content {
          margin-left: 200px;
          padding: 1px 16px;
          height: 1000px;
        }

                media screen and (max-width: 700px) {
          .sidebar {
            width: 100%;
            height: auto;
            position: relative;
          }
          .sidebar a {
            float: left;
          }
          div.content {
            margin-left: 0;
          }
        }

          media screen and (max-width: 400px) {
                .sidebar a {
                    text-align: center;
                    float: none;
                }
          }

    </style>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Site</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="module" src="~/lib/chartjs/chart.umd.js"></script>
</head>
<body>
    <div class="sidebar">
        <a class="active" href="#">Dashboard</a>
        <a href="#">Medicines List</a>
        <a href="#">Announcments</a>
        <a href="\msignin">Log Out </a>
    </div>

    <div id="content">
        @RenderBody()
    </div>
</body>
</html>

