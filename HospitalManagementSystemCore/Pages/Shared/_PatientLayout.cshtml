<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layouts/_PatientLayout.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/css/Patient_Pages/Registered_Patient.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Patient_Pages/Unregistered_Patient.css" asp-append-version="true" />
</head>
<body class="body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark p-md-3">
            <div class="container">
                <a href="#" class="navbar-brand"> <span class="Hospital">Hospital</span> <span class="logo">logo</span> </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="mx-auto"></div> <!-- To space the menu icons to the left-->
                    <ul class="navbar-nav">
                        <li class="nav-item mx-3">
                            <a href="/Patient_Pages/Registered_Patient" class="nav-link text-dark">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a href="/Navbar_Pages/Services" class="nav-link text-dark">Services</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a href="/Navbar_Pages/Doctors" class="nav-link">Doctors</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a href="#visits" class="nav-link">Your visits</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a href="#footer" class="nav-link">About us</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a href="#footer" class="nav-link">Contact us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="full_text">
        <div class="We_care_about_your_health">
            <span class="We_care">We care</span>
            <br />
            <span>about your health</span>
        </div>
        <div class="smaller_text">
            <span>
                Good health is the state of mental, physical and social well
                being
            </span>
            <br />
            <span>and it does not just mean absence of diseases.</span>
        </div>
    </div>

  

    <div class="Doctor">
        <img src="~/images/Doctor.png" alt="Doctor_img" class="Doctor_img" />
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Book an appointment</h4>
            <p class="card-text">Online appointment</p>
        </div>
    </div>

    <div class="second_card">
        <div class="second-body">
            <h4 class="second-title">Well qualified doctors</h4>
            <p class="second-text">Treat with care</p>
        </div>
    </div>

    <div class="third_card">
        <div class="third-body">
            <h4 class="third-title">Contact number</h4>
            <p class="third-text">+02 37416874</p>
        </div>
    </div>



    <form class="search-input-container">
        <span class="Find_a_doctor">Find a doctor</span>
        <br />
        <input class="search-input" type="text" placeholder="Doctor's name">
        <input class="search-input" type="text" placeholder="Specialty">
        <button class="check-button">Check availability</button>
        <button class="search-button">Search</button>
    </form>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>About Us</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam sed lacus id mauris imperdiet iaculis.</p>
                </div>
                <div class="col-md-4">
                    <h3>Contact Information</h3>
                    <p>123 Main St<br>Anytown, USA 12345<br>Phone: (123) 456-7890<br>Email: info@company.com</p>
                </div>
                <div class="col-md-4">
                    <h3>Terms and Conditions</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam sed lacus id mauris imperdiet iaculis.</p>
                </div>
            </div>
        </div>
    </footer>


    <div>
        @RenderBody();
    </div>
</body>
</html>
