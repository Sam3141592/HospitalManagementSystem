@page
@model HospitalManagementSystem.Pages.Manager_Pages.ManagerAnnouncementsModel
@{
	Layout = "_LayoutDoctor";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.mname. <span>Welcome Here</span></h3>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Add Announcement</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <form asp-page-handler="AddAnnc">
                                    <input type="text" name="content" id="selectedItem" required />
                                    <input type="submit" value="Submit" required>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Announcements</h4>
                        </div>
                        <div class="card-body">
                            <div class="card shadow" style="border-radius: 1rem 1rem 1rem 1rem;">
                                <div class="card-body">
                                    @for (int i = 0; i < Model.annc.Rows.Count; i++)
                                    {
                                        <div class="card">
                                            <div class="card-title">
                                                @Model.annc.Rows[i][0]
                                            </div>
                                            <div class="card-body">
                                                <div class="ct-bar-chart m-t-30">
                                                    <p>@Model.annc.Rows[i][2]</p>
                                                </div>
                                            </div>
                                            <div class="float-xl-end">@Model.annc.Rows[i][1]</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
