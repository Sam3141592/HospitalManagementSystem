@page
@model HospitalManagementSystem.Pages.Manager_Pages.ManagerDepartementModel
@{
    Layout = "_LayoutDoctor";
}
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.mname. <span>Welcome Here</span></h3>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-title">
                            <h4>Department Ratings</h4>
                        </div>
                        <div class="card-body">

                            @Model.deptAvgRate (@Model.nuFeedbackDept)

                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Department</h4>
                        </div>
                        <div class="card-body">
                            <div class="card shadow" style="border-radius: 1rem 1rem 1rem 1rem;">
                                <div class="card-body">
                                    <table class="table table-responsive-xl table-hover">
                                        <thead>
                                            <tr>
                                                <th>Doctor Name</th>
                                                <th>Rate</th>
                                                <th>Comment</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.deptFeedback.Rows.Count; i++)
                                            {
                                                <tr>
                                                    <th scope="row">@Model.deptFeedback.Rows[i][0]</th>
                                                    @for (int j = 1; j < Model.deptFeedback.Columns.Count; j++)
                                                    {
                                                        <td>@Model.deptFeedback.Rows[i][j]</td>
                                                    }
                                                </tr>
                                            }

                                        </tbody>
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
