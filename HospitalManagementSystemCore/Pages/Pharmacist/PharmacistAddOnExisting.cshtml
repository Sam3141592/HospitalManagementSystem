@page
@model HospitalManagementSystem.Pages.Pharmacist.PharmacistAddOnExistingModel
@{
    Layout = "_LayoutPharmacist";
}


<div class="content-wrap">
    <div class="main">

        <div class="container-fluid">
            <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.mname <span>Welcome Here</span></h3>
            </div>
            <section>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card" style="border-radius: 1rem 1rem 1rem 1rem;">
                            <h2 class="h3 m-4 grey-text" style="font-family: 'Poppins';">Medicine List</h2>
                            <div class="card-body">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Medicine Name</th>
                                            <th>Add Amount</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @for (int i = 0; i < Model.MedicineTable.Rows.Count; i++)
                                        {

                                            <tr>
                                                <td>@Model.MedicineTable.Rows[i][0]</td>
                                                <form method="post">
                                                    <input type="hidden" name="id" id="id" value="@Model.ID">
                                                    <input type="hidden" name="name" id="name" value="@Model.MedicineTable.Rows[i][0]">
                                                <td><input type="text" name="amount"></td>
                                                <td><button type="submit">Add</button></td>
                                                </form>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>