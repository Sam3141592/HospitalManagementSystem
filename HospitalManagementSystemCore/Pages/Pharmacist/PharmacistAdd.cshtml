@page
@model HospitalManagementSystem.Pages.Pharmacist.PharmacistAddModel
@{
    Layout = "_LayoutPharmacist";
}

<div class="content-wrap">
    <div class="main">

<div class="container-fluid">
    <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.mname <span>Welcome Here</span></h3>
            </div>
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="border-radius: 1rem 1rem 1rem 1rem;">
                <h2 class="h3 m-4 grey-text" style="font-family: 'Poppins';">Add New Medicine</h2>
                <div class="card-body">
                    <form id="medicine-form" name="medicine-form" method="post">
                        <input type="hidden" name="selectedItem" id="selectedItem" value="doctor" />
                        <input type="text" name="name" id="name" placeholder="Medicine Name" required>
                        <input type="text" name="amount" id="amount" placeholder="Amount" required>
                        <input type="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
</div>

</div>
</div>