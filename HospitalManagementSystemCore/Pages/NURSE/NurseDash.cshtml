@page
@model HospitalManagementSystem.Pages.NURSEDashModel
@{
    Layout = "_LayoutNurse2";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="page-title">
                <h3 style="padding:5px">Hello, @Model.nurname. <span>Welcome Here</span></h3>
            </div>
            <section>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-title">
                                <h4>Schedule</h4>

                            </div>
                            <div class="card-body">
                                <div class="card">
                                    <div class="card-body">
                                        <table class="table table-responsive table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Day</th>
                                                    <th>Room</th>
                                                    <th>Start Time</th>
                                                    <th>End Time</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Math.Min(Model.schedule.Rows.Count, 3); i++)
                                                {
                                                    <tr>

                                                        @for (int j = 0; j < Model.schedule.Columns.Count; j++)
                                                        {
                                                            <td>@Model.schedule.Rows[i][j]</td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                                <div class="ct-bar-chart m-t-30"></div>
                                <div class="float-xl-end"><a href="/Nurse/NurseSchedule?sid=@ViewData["sid"]">See more</a></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-title">
                                <h4>Announcments</h4>

                            </div>
                            <div class="card-body">
                                <div class="card">
                                    @for (int i = 0; i < Math.Min(Model.annc.Rows.Count, 2); i++)
                                    {
                                        <div class="card">
                                            <div class="card-title">
                                                @Model.annc.Rows[i][0]
                                            </div>
                                            <div class="card-body">
                                                <div class="ct-bar-chart m-t-30">
                                                    <p>@Model.annc.Rows[i][2]</p>
                                                </div>
                                            </div>
                                            <div class="float-xl-end">@Model.annc.Rows[i][1]</div>
                                        </div>
                                    }


                                    <div class="float-xl-end"><a href="/NURSE/NurseAnnouncements?sid=@ViewData["sid"]">See more</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>